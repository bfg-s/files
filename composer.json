{
    "name": "bfg/files",
    "description": "The package is aimed at controlling files",
    "type": "bfg-app",
    "keywords": ["laravel", "extension", "files"],
    "license": "MIT",
    "authors": [
        {
            "name": "bfg"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": ">=8.0.0",
        "ext-exif": "*",
        "ext-fileinfo": "*",
        "bfg/installer": "*"
    },
    "require-dev": {},
    "autoload": {
        "psr-4": {
            "Bfg\\Files\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bfg\\Files\\ServiceProvider"
            ]
        }
    }
}
